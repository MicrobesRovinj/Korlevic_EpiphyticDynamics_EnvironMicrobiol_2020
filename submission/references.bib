file = {:mydisk/POSAO2/literatura/knjige/Abraham, 2014, The Family Hyphomonadaceae.pdf:pdf},
isbn = {9783642301971},
month = {aug},
pages = {283--299},
publisher = {Springer-Verlag},
title = {{The Family \textit{Hyphomonadaceae}}},
volume = {9783642301},
year = {2014}
}
