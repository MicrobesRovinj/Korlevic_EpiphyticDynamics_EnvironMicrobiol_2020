publisher = {John Wiley & Sons, Ltd},
title = {{Microbial diversity of extant stromatolites in the hypersaline marine environment of Shark Bay, Australia}},
url = {http://doi.wiley.com/10.1111/j.1462-2920.2004.00651.x},
volume = {6},
