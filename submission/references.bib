file = {:mydisk/POSAO2/literatura/articles/Kozich, 2013, Development of a Dual-Index Sequencing Strategy and Curation Pipeline for Analyzing Amplicon Sequence Data on the MiSeq Illumina Sequencing Platform.pdf:pdf},
journal = {Appl. Environ. Microbiol.},
