issn = {1932-6203},
journal = {PLoS One},
month = {mar},
number = {3},
pages = {e58269},
publisher = {Public Library of Science},
title = {{Diversity and Abundance of the Bacterial Community of the Red Macroalga \textit{Porphyra umbilicalis}: Did Bacterial Farmers Produce Macroalgae?}},
