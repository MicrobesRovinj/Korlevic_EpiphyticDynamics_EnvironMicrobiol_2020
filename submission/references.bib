issn = {00223646},
journal = {J. Phycol.},
keywords = {Cyanobacteria,Diversity,Epiphytes,Nitrogen fixation,Phyllosphere,Seagrass},
month = {aug},
number = {4},
pages = {768--779},
publisher = {Wiley/Blackwell (10.1111)},
title = {{CHARACTERIZATION AND COMPARISON OF PROKARYOTIC EPIPHYTES ASSOCIATED WITH THREE EAST AFRICAN SEAGRASSES}},
